<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/static/css/login.css">
</head>
<body>
  <style>
    .hidden {
      display: none;
    }
  </style>
  <div class="wrapper">
    <div class="wrapper-assist">
      <div class="first-part both-parts">
        <a href="/"  data-tilt data-tilt-glare data-tilt-max-glare="0.8">
          <img class="Main_logo"  data-tilt data-tilt-glare data-tilt-max-glare="0.8" src="/static/image/logo2.0black.png" alt="">
        </a>
      </div>
      <div class="second-part both-parts">
        <form action="/auth/login" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <h1>Login</h1>
          <div class="input-box">
            <input type="email" name="email" placeholder="Email adresa | Email" required>
            <i class='bx bxs-user'></i>
          </div>
          <div class="input-box">
            <input type="password" name="password" placeholder="Fjalkalimi | Password" required>
            <i class='bx bxs-lock-alt' ></i>
          </div>
          <br>
          <div class="remember-forgot">
            <label><input type="checkbox" name="rememberMe">Remember Me</label>
            <a href="#" onclick="openModal(event)">
              <u>Forgot Password?</u>
            </a>
          </div>
          <br>
          <button type="submit" class="btn">Login</button>
          <br>
          <br>
          <div class="span">
            <p id="messageContainer">
              <%= message %>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div id="emailModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>Password Reset</h2>
      <p>Please enter your email address to reset your password.</p>
      <form id="resetPasswordForm" method="post" action="/auth/reset-password">
        <div class="form-group">
          <input type="email" id="email" placeholder="Enter your email" required>
        </div>
        <button type="submit">Send Reset Link</button>
      </form>
    </div>
  </div>

  <script>
    setTimeout(() => {
      const messageContainer = document.getElementById('messageContainer');
      messageContainer.classList.add('hidden');
    }, 10000);
    function openModal(event) {
  event.preventDefault();
  document.getElementById('emailModal').style.display = 'block';
}

function closeModal() {
  document.getElementById('emailModal').style.display = 'none';
}



window.onclick = function(event) {
  const modal = document.getElementById('emailModal');
  if (event.target === modal) {
    closeModal();
  }
}
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" ></script>
  <script src="https://unpkg.com/tilt.js@1.1.21/dest/tilt.jquery.min.js"></script>
</body>
</html>
