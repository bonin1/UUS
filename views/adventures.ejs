    <div class="chat-container">
        <div class="inside-container-chat">
            <header class="chat">
                <img src="/static/image/icon-park_robot.png" alt="">
                <div class="insidetext">
                    <h1>UNI ASSIST</h1>
                    <p>online</p>
                </div>
            </header>
            <div class="parent">
                <div id="chat-box">
                    <div class="bot-message">
